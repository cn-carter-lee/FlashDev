<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @RenderSection("head", required: false)
</head>
<body>
    <div class="ui-header-top">
        <div class="middle-container">@Html.ActionLink("Home", "Index", "Home") @Html.ActionLink("About", "About", "Home")
            @Html.ActionLink("Contact", "Contact", "Home")
            | <a href="/teacher">Teacher</a> <a href="/headteacher">Head Teacher</a> | @Html.Partial("_LoginPartial")
        </div>
    </div>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
    </div>
    <footer>
        <div class="middle-container text">
            © 2014 All rights reserved</div>
    </footer>
    @RenderSection("footer", required: false)
    @RenderSection("Scripts", required: false)
</body>
</html>
