@{
    Layout = "~/Views/Shared/Unauthorized_Layout.cshtml";
    ViewBag.Title = "";
}
@section head {
    <script src="/Scripts/jquery-1.10.2.js"></script>
    <script src="/Scripts/jquery-ui-1.10.4.custom.js"></script>
    <script src="/Scripts/register.js"></script>
    <link href="/Content/css/register.css" rel="stylesheet" />
    <script type="text/javascript">
        $(document).ready(function () {
            $("#regForm").validate();
        });
    </script>
}
<div class="middle-container clear" style="margin-top: 10px;">
    <div class="title">
        <div class="fl">
            会员注册</div>
        <a href="#nogo" class="close" onclick="hideLogin()"></a>
    </div>
    <div class="clear">
    </div>
    <form class="cmxform" id="regForm" method="post" action="">
    <table>
        <tr>
            <td>
                帐号：
            </td>
            <td>
                <input type="text" class="inputcls" id="userid" minlength="2" data-required />
            </td>
            <td>
                长度5～14位. <span id="ruserid_error" class="red"></span>
            </td>
        </tr>
        <tr>
            <td>
                昵称：
            </td>
            <td>
                <input type="password" class="inputcls" id="password" />
            </td>
            <td>
                长度5～14位.<span id="rpassword_error" class="red"></span>
            </td>
        </tr>
        <tr>
            <td>
                密码：
            </td>
            <td>
                <input type="password" class="inputcls" id="rpassword" />
            </td>
            <td>
                <span id="rrpassword_error" class="red"></span>
            </td>
        </tr>
        <tr>
            <td>
                重复密码：
            </td>
            <td>
                <input type="password" class="inputcls" id="rrpassword" />
            </td>
            <td>
                <span id="rrpassword_error" class="red"></span>
            </td>
        </tr>
        <tr>
            <td>
                电子邮箱：
            </td>
            <td>
                <input type="email" class="inputcls" id="remail" required />
            </td>
            <td>
                凭此邮箱重置密码.<span id="remail_error" class="red"></span>
            </td>
        </tr>
        <tr>
            <td>
            </td>
            <td>
                <input type="button" value="立即注册" onclick="createUser()" /><span style="margin-left: 10px;
                    color: #f00;" id="register_error"></span>
            </td>
            <td>
            </td>
        </tr>
    </table>
    </form>
    <div class="tip">
        点击“立即注册”表示您同意并遵守 <a href="/action/Agreement" target="_blank">用户协议</a></div>
</div>
